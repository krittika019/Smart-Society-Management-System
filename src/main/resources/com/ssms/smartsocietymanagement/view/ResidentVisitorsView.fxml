<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ssms.smartsocietymanagement.controller.ResidentVisitorsController"
            styleClass="content-pane">
    <children>
        <VBox spacing="20.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
            </padding>

            <Label text="Visitor Management" styleClass="content-title">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                <tabs>
                    <Tab text="Pending Requests">
                        <content>
                            <VBox spacing="10.0">
                                <Label text="Pending Visitor Requests" styleClass="section-title">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>

                                <HBox spacing="10.0" alignment="CENTER_LEFT">
                                    <Label text="Filter:" />
                                    <TextField fx:id="pendingFilterField" promptText="Search by name or purpose" prefWidth="250.0" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="refreshPendingBtn" text="Refresh" onAction="#handleRefreshPending" styleClass="btn-primary" />
                                </HBox>

                                <TableView fx:id="pendingVisitorsTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="pendingIdColumn" text="ID" visible="false" />
                                        <TableColumn fx:id="pendingNameColumn" text="Name" prefWidth="150.0" />
                                        <TableColumn fx:id="pendingMobileColumn" text="Mobile" prefWidth="120.0" />
                                        <TableColumn fx:id="pendingPurposeColumn" text="Purpose" prefWidth="150.0" />
                                        <TableColumn fx:id="pendingEntryTimeColumn" text="Entry Time" prefWidth="150.0" />
                                    </columns>
                                </TableView>

                                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                                    <Button fx:id="approveVisitorBtn" text="Approve Visitor" onAction="#handleApproveVisitor" styleClass="btn-success" />
                                    <Button fx:id="rejectVisitorBtn" text="Reject Visitor" onAction="#handleRejectVisitor" styleClass="btn-danger" />
                                </HBox>
                            </VBox>
                        </content>
                    </Tab>

                    <Tab text="Visitor History">
                        <content>
                            <VBox spacing="10.0">
                                <Label text="All Visitors" styleClass="section-title">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>

                                <HBox spacing="10.0" alignment="CENTER_LEFT">
                                    <Label text="Filter:" />
                                    <TextField fx:id="historyFilterField" promptText="Search by name, purpose or status" prefWidth="250.0" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="refreshHistoryBtn" text="Refresh" onAction="#handleRefreshHistory" styleClass="btn-primary" />
                                </HBox>

                                <TableView fx:id="visitorHistoryTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="historyIdColumn" text="ID" visible="false" />
                                        <TableColumn fx:id="historyNameColumn" text="Name" prefWidth="120.0" />
                                        <TableColumn fx:id="historyMobileColumn" text="Mobile" prefWidth="100.0" />
                                        <TableColumn fx:id="historyPurposeColumn" text="Purpose" prefWidth="120.0" />
                                        <TableColumn fx:id="historyEntryTimeColumn" text="Entry Time" prefWidth="150.0" />
                                        <TableColumn fx:id="historyExitTimeColumn" text="Exit Time" prefWidth="150.0" />
                                        <TableColumn fx:id="historyStatusColumn" text="Status" prefWidth="100.0" />
                                    </columns>
                                </TableView>
                            </VBox>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
        </VBox>
    </children>
</AnchorPane>