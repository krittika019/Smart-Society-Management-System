<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ssms.smartsocietymanagement.controller.UserTypeSelectionController" stylesheets="@../styles/styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Smart Society Management System" styleClass="title-label">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <Label text="Select your user type:" styleClass="subtitle-label">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="40.0">
            <Button onAction="#handleResidentButton" text="Resident" styleClass="button-large" />
            <Button onAction="#handleAdminButton" text="Administrator" styleClass="button-large" />
        </HBox>
    </children>
</VBox>