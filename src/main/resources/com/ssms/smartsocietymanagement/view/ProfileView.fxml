<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ssms.smartsocietymanagement.controller.ProfileViewController" stylesheets="@../styles/styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Profile Information" styleClass="page-title">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <HBox spacing="30.0" alignment="CENTER">
            <children>
                <VBox styleClass="profile-avatar" alignment="CENTER">
                    <children>
                        <Label text="User Profile" />
                        <!-- Placeholder for profile image -->
                        <Region prefHeight="150.0" prefWidth="150.0" styleClass="avatar-placeholder" />
                    </children>
                </VBox>

                <VBox styleClass="profile-details" spacing="15.0">
                    <children>
                        <GridPane hgap="20" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="150.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="300.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Name:" styleClass="profile-label" GridPane.rowIndex="0" />
                                <Label fx:id="nameLabel" text="John Doe" styleClass="profile-value" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Username:" styleClass="profile-label" GridPane.rowIndex="1" />
                                <Label fx:id="usernameLabel" text="johndoe123" styleClass="profile-value" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Email:" styleClass="profile-label" GridPane.rowIndex="2" />
                                <Label fx:id="emailLabel" text="johndoe@example.com" styleClass="profile-value" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Apartment:" styleClass="profile-label" GridPane.rowIndex="3" />
                                <Label fx:id="apartmentLabel" text="B-303" styleClass="profile-value" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Label text="Phone:" styleClass="profile-label" GridPane.rowIndex="4" />
                                <Label fx:id="phoneLabel" text="+91 9876543210" styleClass="profile-value" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                            </children>
                        </GridPane>

                        <HBox spacing="15.0">
                            <Button text="Edit Profile" styleClass="button-primary" />
                            <Button text="Change Password" styleClass="button-secondary" />
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>